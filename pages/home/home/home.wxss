/* pages/swiper-demo/swiper-demo.wxss */
@import "/assets/fonts/iconfont.wxss";

.view-home {
  width: 300rpx;
  width: 100%;
  position: fixed;
  z-index: 99;
  left: 0;
  top: 70rpx;
}

.view-boder {
  width: 100%;
  height: 80rpx;
  background-color: red;
  margin-top: 10rpx;

}

.search {
  width: 640rpx;
  height: 58rpx;
  position: relative;
  top: 20rpx;
  line-height: 58rpx;
  border-radius: 40rpx;
  background-color: #fff;
  margin-top: 55rpx;
  margin-left: 20rpx;
  text-indent: 20rpx;
  font-size: 24rpx;
  color: #666;
  display: flex;
}

.search-icon {
  position: absolute;
  right: 20rpx;
}

.xiaoxi-icon {
  position: absolute;
  right: -60rpx;
  color: #fff;
}

.tab-nav {
  width: 1200rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  background-color: red;
  color: #fff;
  transition: all 0.5s linear;
}

.tab-item {
  float: left;
  width: 150rpx;
  text-align: center;
}

.tab-item.active {
  font-size: 15px;
  font-weight: bold;
}

.swiper-wrap {
  width: 100%;
  margin-top: 293rpx;
  height: 370rpx;
}

.swiper-wrap .swiper-item {
  width: 96%;
}

.swiper-wrap image {
  width: 100%;
  height: 370rpx;
}

.swiper-wrape {
  height: 450rpx;
  margin-top: 20rpx;
}

.swiper-wrape.tab-goods {
  height: 400rpx;
  position: relative;

}

.swiper-wrape .tab-goods-Item {
  width: 100%;
  height: 400rpx;
  font-size: 28rpx;
  transition: all 0.5s linear;
  display: flex;
  flex-wrap: wrap;

}

.swiper-wrape .tab-goods-Item .tab-goods-item {
  width: 17%;
  height: 200rpx;
  margin-left: 2%;
  font-size: 24rpx;
}

.swiper-wrape image {
  border: 1% solid #fff;
  border-radius: 50%;
  width: 100%;
  height: 120rpx;
  margin-bottom: 20rpx;
}
.will-title{
  height: 50rpx;
  overflow: hidden;
  line-height: 50rpx;
  display: -webkit-box;
  font-size: 22rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  color: #333;
}

.home-hotgoods {
  width: 100%;
  height: 80rpx;
  display: flex;
  margin-left: 5%;
}

.home-hotgoods image {
  width: 20%;
  height: 100%;
}

.home-hotgoods .swiper-item {
  display: flex;
  flex-wrap: wrap;
  width: 80%;
  font-size: 20rpx;
  height: 20rpx;
}

.hot-active {
  margin-top: 20rpx;
  width: 80%;
  height: 30rpx;
  text-indent: 30rpx;
}
.hot-active .swiperhot{
  height: 50rpx;
}

.swiper-itemsell {
  width: 100%;
  height: 2rpx;
  font-size: 26rpx;
  color: #333;
}

.home-hotgoods-image {
  width: 90%;
  margin-left: 5%;
  height: 300rpx;
}

.home-maiosha {
  width: 100%;
  height: 80rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  margin-left: 5%;
}

.home-maiosha image {
  width: 26%;
  height: 60%;
}

.home-miaoshatime {
  margin-right: 10%;
  height: 30rpx;
  font-size: 26rpx;
}

.home-miaoshatime span {
  width: 30rpx;
  height: 40rpx;
  color: #fff;
  background-color: #f00;
}

.home-miaoshatime i {
  color: #f00;
}

.home-miaoshagoods {
  width: 90%;
  height: 400rpx;
  margin-left: 5%;

}

.home-miaoshagoodstime {
  width: 23%;
  height: 98rpx;
  margin-left: 2%;
  float: left;
  text-align: center;
  font-size: 28rpx;
  border-bottom: 2rpx solid #ccc;
}
.home-miaoshagoodstime.actable{
  color: red;
  font-weight: 700;
  border-bottom: 2rpx solid red;
}
.home-miaoshagoodstime-slot{
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: space-around;
}

.slot-item{
  width:800rpx;
  height: 98rpx;
  border-bottom: 2rpx solid red;
}

.home-miaoshalist {
  width: 1200;
  height: 300rpx;
}

.home-miaoshalist-tab-nav {
  height: 300rpx;
  line-height: 50rpx;
  font-size: 28rpx;
}

.home-miaoshalist-tab-item {
  height: 240rpx;
  display: flex;
  flex-direction: row;
  transition: all 1s linear;
  text-align: center;
}

.home-miaoshalist-tab-items {
  width: 260rpx;
  height: 180rpx;
}

.home-miaoshalist-tab-items image {
  width: 90%;
  height: 160rpx;
}

.p-title {
  height: 50rpx;
  overflow: hidden;
  line-height: 50rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  color: #333;
}

.p-price {
  color: red;
  font-size: 20rpx;
}

.hmoe-groupbuy{
  width: 90%;
  height: 300rpx;
  margin-left: 5%;
}
.hmoe-groupbuy-title{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
}
.hmoe-groupbuy-title .p-left{
  width: 22%;
  height: 50rpx;
}

.hmoe-groupbuy-title .p-right{
  width: 76%;
  height: 50rpx;
  font-size: 24rpx;
  color: #333;
}

.hmoe-groupbuy-content{
  width: 100%;
  height: 250rpx;
}
.hmoe-groupbuy-item{
  width: 1000rpx;
  height: 250rpx;
  display: flex;
  justify-content: space-around;

}
.home-groupbuy-goods{
  width: 180rpx;
  height: 250rpx;
}
.home-groupbuy-goods image{
  width: 100%;
  height: 200rpx;
}
