/* pages/swiper-demo/swiper-demo.wxss */
.view-boder {
  width: 100%;
  height: 100rpx;
  background-color: red;
  margin-top: 10rpx;
}

.view-input {
  height: 80rpx;
  padding-top: 20rpx;
}

.view-input input {
  width: 80%;
  height: 60rpx;
  line-height: 60rpx;
  text-indent: 2rem;
  border: 1rpx solid skyblue;
  border-radius: 5rem;
  margin-left: 5%;
  background-color: #fff;
}

.tab-nav {
  width: 1500rpx;
  height: 88rpx;
  line-height: 88rpx;

  font-size: 28rpx;
  background-color: red;
  color: #fff;
  transition: all 0.5s linear;
}

.tab-nav .tab-item {
  float: left;
  width: 150rpx;
  text-align: center;
}

.tab-nav .tab-item.active {
  font-size: 15px;
  font-weight: bold;
}

.swiper-wrap {
  width: 100%;
  height: 360rpx;
}
.swiper-wrap .swiper-item {
  width: 90%;
  margin-left: 5%;
}

.swiper-wrap .swiper-item img {
  width: 100%;
  height: 360rpx;
}