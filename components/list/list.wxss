/* components/list/list.wxss */
.list-container{
  width: 100%;
  display: flex;
}
.list-wrap{
  width: 100%;
  display: flex;
  margin: 20rpx;
  flex-wrap: wrap;
  justify-content: center;
  text-align: center;
}
.list-wrap .list-item{
  width: 50%;
  margin-bottom: 10rpx;
}
.list-wrap .list-item image{
  width:344rpx;
  height: 344rpx;
}
.list-wrap .list-item view{
  width:344rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  text-align: left;
  height: 72rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}